<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
  <% @lists.each do |list| %>
  <td><%= list.title %></td>
  <td><%= list.body %></td>
  <td><%= link_to "Show", list_path(list.id) %></td>
  <td><%= link_to "Edit", edit_list_path(list.id) %></td>
  <td>
    <%= link_to "Destroy", destroy_list_path(list.id), method: :delete, "data-confirm" => "Are you sure?" %>
  </td>
  </tbody>
</table>
  <% end %>

<h2>New book</h2>

<% if @list.errors.any? %>
  <%= @list.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @list, url: '/lists', method: :post do |f| %>
    <h3>Title</h3>
    <%= f.text_field :title %>
	
    <h4>Body</h4>
    <%= f.text_area :body %>
	
    <%= f.submit 'Create Book' %>

<% end %>